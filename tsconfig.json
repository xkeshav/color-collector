{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "out",
    "lib": ["es2021", "es2018.regexp"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noUnusedParameters": true
  },
  "exclude": ["src/test/sample/**"]
}
