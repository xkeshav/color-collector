{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "out",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true /* Report errors on unused parameters. */
  }
}
